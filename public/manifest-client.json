  "share_target": {
    "action": "/client/packages/create",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+alamena",
      "url": "/client/packages/track?code=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],

  "launch_handler": {
    "client_mode": "navigate-existing"
  }
