  "shortcuts": [
    {
      "name": "Scanner QR",
      "short_name": "Scanner",
      "description": "Scanner un code QR ou code-barres",
      "url": "/deliverer/packages?scan=1",
      "icons": [
        {
          "src": "/images/shortcuts/scanner-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mes Livraisons",
      "short_name": "Livraisons",
      "description": "Voir mes livraisons à effectuer",
      "url": "/deliverer/deliveries",
      "icons": [
        {
          "src": "/images/shortcuts/deliveries-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mon Wallet",
      "short_name": "Wallet",
      "description": "Consulter mon solde et historique",
      "url": "/deliverer/wallet",
      "icons": [
        {
          "src": "/images/shortcuts/wallet-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Pickups Disponibles",
      "short_name": "Pickups",
      "description": "Voir les nouveaux pickups disponibles",
      "url": "/deliverer/pickups/available",
      "icons": [
        {
          "src": "/images/shortcuts/pickups-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/images/screenshots/dashboard-mobile.png",
      "sizes": "640x1136",
      "type": "image/png",
      "platform": "narrow",
      "label": "Dashboard livreur"
    },
    {
      "src": "/images/screenshots/scanner-mobile.png",
      "sizes": "640x1136", 
      "type": "image/png",
      "platform": "narrow",
      "label": "Scanner QR"
    }
  ],
  
  "share_target": {
    "action": "/deliverer/packages/scan",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "package_code",
      "text": "notes",
      "url": "tracking_url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+alamena",
      "url": "/deliverer/packages/scan?code=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  }
}